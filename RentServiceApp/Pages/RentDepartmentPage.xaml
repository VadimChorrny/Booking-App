<Page x:Class="RentServiceApp.Pages.RentDepartmentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RentServiceApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RentDepartmentPage" Background="White">

    <Grid>
        <StackPanel Margin="30">
            <TextBlock Text="Enter type house:" FontSize="30"/>
            <TextBox x:Name="txtHouseName" FontSize="30"/>
            <DatePicker Name="datetimefrom" FontSize="30"/>
            <DatePicker Name="datetimeto" FontSize="30"/>
            <ComboBox Name="cbUsers" FontSize="30"/>
            <ComboBox Name="cbDepartmentId" FontSize="30"/>
            <CheckBox Content="IsAviable" x:Name="checkBoxIsAviable" FontSize="20"/>
            <Button Content="Add new department" FontSize="30" Margin="0 51 0 0" Click="Button_Click" />
        </StackPanel>
    </Grid>
</Page>
